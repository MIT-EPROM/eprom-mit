!!! XML
!!!
%html
  %head
    %title MIT <<EPROM>>
    %meta(charset="utf-8")
    %meta(name="description" content="MIT Entrepreneurial Programming Researh on Mobile phones")
    = csrf_meta_tag
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'compiled/screen.css',:media=>"screen, projection"
    = stylesheet_link_tag "compiled/print.css", :media=>"print"
    /[if lt IE 8]
      = stylesheet_link_tag "compiled/ie.css", :media=>"screen, project"
      
    
  %body.bp.two-col
    #container
      #header
        %h1 MIT EPROM
      #sidebar
        %div item 1
        %div item 2
        %div item 3
      #content
        %p.notice= notice
        %p.error= alert
        %p.success= notice
        = yield
      #footer
        %h3 MIT APP footer